<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemlist_cv"
    android:layout_width="195dp"
    android:layout_height="200dp"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemlist_iv_thumbnail"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/gif_tags" />

        <LinearLayout
            android:layout_marginStart="4dp"
            android:layout_marginEnd="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6">

            <TextView
                android:id="@+id/itemlist_tv_title"
                android:text="@string/gif_title"
                android:textSize="17sp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


            <ImageView
                android:id="@+id/itemlist_button_share"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:src="@drawable/share"
                android:layout_marginRight="-35dp"
                />

            <Button
                android:id="@+id/button_share"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:layout_marginLeft="12sp"
                />



            <TextView
                android:id="@+id/itemlist_tv_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="17sp"
                android:gravity="center_vertical"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
